<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IcecreamMAUI.Pages.OnboardingPage"
             Shell.NavBarIsVisible="False"   >
    
    <Grid RowDefinitions="*,Auto" Padding="0,0,0,40">
        <VerticalStackLayout Grid.Row="0" Spacing="20" HorizontalOptions="Center" >
            <Image Source="ice_cream" 
                   HeightRequest="250" 
                   Aspect="AspectFit"
                   WidthRequest="250"/>
            <Label
                Text="Welcom"
                FontSize="20"
                HorizontalOptions="Center"
                FontAttributes="Bold"
                />
            <Label
                Text="The .NET Multi-platform App UI "
                FontSize="25"
                HorizontalOptions="Center"
                FontAttributes="Bold"
                 />
            <Label
                 Text="just for ice creams"
                 FontSize="18"
                 HorizontalOptions="Center"
                  />
        </VerticalStackLayout>
        <VerticalStackLayout Grid.Row="1" Spacing="20" HorizontalOptions="Center">
            <Button Text="Sign Up" Clicked="Signup_Clicked"/>
            <Button Text="Sign In" Clicked="Signin_Clicked"/>
        </VerticalStackLayout>
    </Grid>
   
</ContentPage> 